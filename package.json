{
  "name": "@containerly/platform",
  "version": "1.1.2",
  "description": "A CDK8s TypeScript project that generates Kubernetes manifests for deploying a comprehensive platform with various operators including Flux, Grafana, Prometheus, Loki, Strimzi Kafka, MinIO, and Elastic Cloud ECK.",
  "main": "main.js",
  "types": "main.ts",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/containerly/platform.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "keywords": [
    "cdk8s",
    "kubernetes",
    "typescript",
    "operators",
    "flux",
    "grafana",
    "prometheus",
    "loki",
    "kafka",
    "minio",
    "elasticsearch"
  ],
  "author": "Containerly",
  "bugs": {
    "url": "https://github.com/containerly/platform/issues"
  },
  "homepage": "https://github.com/containerly/platform#readme",
  "scripts": {
    "import": "cdk8s import",
    "synth": "cdk8s synth",
    "compile": "tsc --build",
    "watch": "tsc --build -w",
    "test": "jest",
    "build": "npm run compile && npm run test && npm run synth",
    "upgrade": "npm i cdk8s@latest cdk8s-cli@latest",
    "upgrade:next": "npm i cdk8s@next cdk8s-cli@next",
    "version:patch": "./script/version-bump patch",
    "version:minor": "./script/version-bump minor",
    "version:major": "./script/version-bump major",
    "version:check": "node -p \"require('./package.json').version\"",
    "version:dry-run": "npm version --dry-run"
  },
  "dependencies": {
    "cdk8s": "^2.69.73",
    "cdk8s-plus-28": "^2.5.6",
    "cdk8s-plus-29": "^2.6.0",
    "constructs": "^10.4.2"
  },
  "devDependencies": {
    "@types/jest": "^27",
    "@types/node": "^14",
    "cdk8s-cli": "^2.200.98",
    "jest": "^27",
    "ts-jest": "^27",
    "ts-node": "^10",
    "typescript": "^4.9.5"
  }
}
